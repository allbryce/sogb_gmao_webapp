@model ForgotPasswordViewModel

@{
    Html.EnableClientValidation();
}

@using (Html.BeginForm(SinbaConstants.Actions.ForgotPassword, SinbaConstants.Controllers.Account, FormMethod.Post, new { @class = CssClasses.EditForm }))
{
    @Html.AntiForgeryToken()
    
    @Html.DevExpress().FormLayout(settings =>
    {
        settings.Name = "forgotPasswordFormLayout";

        settings.Items.Add(m => m.Email, textBox => ViewHelper.FormLayoutTextBoxSettings(textBox, focus: true));
        settings.Items.Add(m => ViewHelper.FormLayoutSubmitButtonSettings(m, AccountResource.btnSend));
    }).GetHtml()
}
